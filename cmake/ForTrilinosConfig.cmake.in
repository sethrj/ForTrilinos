get_filename_component(ForTrilinos_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" DIRECTORY)
list(APPEND CMAKE_MODULE_PATH "${ForTrilinos_CMAKE_DIR}")

#-----------------------------------------------------------------------------#
# Variables
#-----------------------------------------------------------------------------#

@ForTrilinos_EXPORT_VARIABLES@

#-----------------------------------------------------------------------------#
# Dependencies
#-----------------------------------------------------------------------------#

include(CMakeFindDependencyMacro)

enable_language(C)

find_dependency(HDF5 COMPONENTS C HL)
find_dependency(PythonInterp)
if(ForTrilinos_DATA_DIR)
  find_dependency(SCALEData COMPONENTS SCLIB)
endif()

if(ForTrilinos_USE_MPI)
  find_dependency(MPI COMPONENTS C)
endif()

if(ForTrilinos_USE_Trilinos)
  find_dependency(Trilinos ${ForTrilinos_Trilinos_VERSION})
endif()

if(ForTrilinos_USE_Fortran)
  find_dependency(Flibcpp)
endif()

#-----------------------------------------------------------------------------#
# Targets
#-----------------------------------------------------------------------------#

if(NOT TARGET @ForTrilinos_NAMESPACE@Nemesis)
  include("${ForTrilinos_CMAKE_DIR}/SCALETargets.cmake")
endif()

